extends _template

block main
  .home-page
    // START: home-first
    .home-first
      .container
        .home-first__header ПРИЯТНЫЕ ЛЮДИ <br> И ЦЕНЫ
        .home-first__form
          form(action="#").reservation
            .reservation__col
              input.input(type="text" placeholder="дата" data-datepicker="reservation").input_muted
            .reservation__col
              input.input(type="text" placeholder="время").input_muted
            .reservation__col
              select(data-select="reservation")
                option(value="1") 2 гостя
                option(value="1") 3 гостя
                option(value="1") 4 гостя
            .reservation__col
              button(type="submit").btn.btn_primary Забронировать
    // END: /home-first

    // START: home-nav
    .home-nav(data-copy-container)
      .container
        .row
          .col-12.col-lg-9
            .row
              .col-12
                a(href="#").decor-block.decor-block_green.home-nav__item.decor-block_pizza
                  .decor-block__decor
                    svg.svgico.svgico-dec-left-top: use(xlink:href="img/symbol-defs.svg#svgico-dec-left-top")
                    svg.svgico.svgico-dec-right-bottom: use(xlink:href="img/symbol-defs.svg#svgico-dec-right-bottom")
                  .decor-block__content
                    .decor-block__name Правильная <br> ПИЦЦА 
                    .decor-block__desc На тонком тесте  
                  .decor-block__image
                    img(src="img/hn-pizza.png", srcset="img/hn-pizza.png" alt="").d-none.d-lg-block
                    img(src="img/hn-pizza.png", srcset="img/pizza-md.png" alt="").d-lg-none
            
            // генерируется js - ом
            .row(data-copy-in)
              .col-6
                .copy-burgers
              .col-6
                .copy-nav
                .copy-decor
            
            .row
              .col-12.col-lg-8
                a(href="#").img-block.home-nav__item.img-block_bg-cocktail
                  .img-block_cocktail
                  .img-block__content
                    .img-block__name Эксклюзивные <br> коктейли
                    .img-block__desc Классика и новинки
              .col-4.d-none.d-lg-block
                a(href="#").decor-block.decor-block_menu.home-nav__item(data-copy="nav")
                  .decor-block__decor
                    svg.svgico.svgico-dec-left-top: use(xlink:href="img/symbol-defs.svg#svgico-dec-left-top")
                    svg.svgico.svgico-dec-right-bottom: use(xlink:href="img/symbol-defs.svg#svgico-dec-right-bottom")
                  .decor-block__content
                    .decor-block__name Меню
                
          .col-3.d-none.d-lg-block
            a(href="#").img-block(data-copy="burgers").home-nav__item_horizontal.img-block_horizontal.img-block_bg-burger
              .img-block_burger
              .img-block__content
                .img-block__desc Сочные и натуральные
                .img-block__name бургеры
        .row
          .col-3.d-none.d-lg-block: .home-nav__item
            .home-nav__decor-block.home-nav__decor-block_1
          .col-6.col-lg-3
            a(href="#").decor-block.decor-block_actions.home-nav__item
              .decor-block__decor
                svg.svgico.svgico-dec-left-top: use(xlink:href="img/symbol-defs.svg#svgico-dec-left-top")
                svg.svgico.svgico-dec-right-bottom: use(xlink:href="img/symbol-defs.svg#svgico-dec-right-bottom")
              .decor-block__content
                .decor-block__name Акции
          .col-3.d-none.d-lg-block: .home-nav__item(data-copy="decor")
            .home-nav__decor-block.home-nav__decor-block_2
          .col-6.col-lg-3
            a(href="#").decor-block.decor-block_delivery.home-nav__item
              .decor-block__decor
                svg.svgico.svgico-dec-left-top: use(xlink:href="img/symbol-defs.svg#svgico-dec-left-top")
                svg.svgico.svgico-dec-right-bottom: use(xlink:href="img/symbol-defs.svg#svgico-dec-right-bottom")
              .decor-block__content
                .decor-block__name Доставка
    // END: /home-nav

    // START: home slider
    .container.mb-default 
      .home-slider.swiper-container(data-swiper="home")
        .swiper-wrapper
          -for(var i=0;i<4;i++)
            .home-slider__item.swiper-slide: img(src="img/home-slide1.jpg", alt="").img-responsive
        .swiper-pagination
    // END: /home slider

    // START: reviews
    .container: .reviews
      .decor-block__decor
        svg.svgico.svgico-dec-left-top: use(xlink:href="img/symbol-defs.svg#svgico-dec-left-top")
        svg.svgico.svgico-dec-right-bottom: use(xlink:href="img/symbol-defs.svg#svgico-dec-right-bottom")
      .reviews__nav
        .reviews__header Отзывы
        .reviews__authors: .reviews-authors-container
          .reviews-authors.swiper-container(data-swiper="reviews-pagination")
            .swiper-wrapper
              .swiper-slide: .reviews-authors__item.reviews-authors__item_active
                .author: img(src="img/author.jpg", alt="Джек Воробей")
              .swiper-slide: .reviews-authors__item.reviews-authors__item
                .author: img(src="img/author.jpg", alt="Джек Воробей")
              .swiper-slide: .reviews-authors__item.reviews-authors__item
                .author: img(src="img/author.jpg", alt="Джек Воробей")
              .swiper-slide: .reviews-authors__item.reviews-authors__item
                .author: img(src="img/author.jpg", alt="Джек Воробей")
              .swiper-slide: .reviews-authors__item.reviews-authors__item
                .author: img(src="img/author.jpg", alt="Джек Воробей")
              .swiper-slide: .reviews-authors__item.reviews-authors__item
                .author: img(src="img/author.jpg", alt="Джек Воробей")
        .reviews__btn.d-none.d-xl-block
          a(href="#").btn.btn_bd Оставить отзыв
      .reviews__content
        .swiper-container(data-swiper="home-reviews")
          .swiper-wrapper
            -for(var i = 0; i<6; i++)
              .swiper-slide(data-photo="img/author.jpg" data-title="Джек Воробей")
                .reviews__review
                  .review
                    .review__top
                      span.review__header Максим 
                      span.review__date 21 Июня 2019
                    .review__text Вчера отмечали у Вас годовщину свадьбы. Понравилося интерьер, классный персонал и обслуживане. Вкуссная кухня, спасибо шеф повару, обязательно придём ещё в ваше заведение. Вкуссная кухня, спасибо шефу, Спасибо большое всем вам!
                .reviews__review-answer
                  .review-answer
                    .review-answer__header «Шишка» бар-ресторан
                    .review-answer__text Спасибо за вас хороший ься. Хоотзыв, будем дальше стараошая кухн у нас и интеерьер. Будем рады вас видеть.
      .reviews__btn.d-xl-none.my-2
          a(href="#").btn.btn_bd Оставить отзыв
    // END: /reviews